<%= form_with(model: album, class: 'mt-4') do |form| %>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <% if album.errors.any? %>
          <div class="alert alert-danger">
            <h2><%= pluralize(album.errors.count, "error") %> prohibited this album from being saved:</h2>

            <ul>
              <% album.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :cover_image, 'Upload Album Cover Image', class: 'form-label' %>
          <div class="input-group">
            <div class="custom-file">
              <%= form.file_field :cover_image, class: 'custom-file-input', id: 'cover-image' %>
              <label class="custom-file-label" for="cover-image"></label>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <% if album.cover_image.attached? %>
            <div class="uploaded-image-box text-center" style: "height:80%;width:100%">
              <%= image_tag album.cover_image, class: 'img-fluid rounded' %>
            </div>
          <% end %>
        </div>

        <div class="mb-3">
          <%= form.label :photos, 'Upload Album Photos', class: 'form-label' %>
          <%= form.file_field :photos, multiple: true, class: 'form-control' %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="mb-3">
          <%= form.label :title, 'Album Title', class: 'form-label' %>
          <%= form.text_field :title, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :description, 'Album Description', class: 'form-label' %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :all_tags, 'Tags', class: 'form-label' %>
          <%= form.text_field :all_tags, placeholder: "Enter tags separated by commas", class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :price, 'Album Price', class: 'form-label' %>
          <%= form.number_field :price, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="mb-3 text-center">
      <%= form.submit 'Save Album', class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>


